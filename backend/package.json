{
  "name": "router-management-backend",
  "version": "1.0.0",
  "description": "Backend API for Router Management System",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "dev:tsx": "tsx watch --clear-screen=false src/index.ts",
    "start": "node dist/index.js",
    "start:dev": "tsx watch --clear-screen=false src/index.ts",
    "build": "tsc",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs router-management-api",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "deploy": "npm run build && npm run prisma:migrate:prod && npm run pm2:reload",
    "deploy:first": "npm install && npm run build && npm run prisma:generate && npm run prisma:migrate:prod && npm run pm2:start"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "keywords": [
    "express",
    "typescript",
    "postgresql",
    "prisma"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.971.0",
    "@aws-sdk/lib-storage": "^3.971.0",
    "@aws-sdk/s3-request-presigner": "^3.971.0",
    "@prisma/client": "^5.22.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.3",
    "node-routeros": "^1.6.8",
    "ssh2": "^1.17.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.6",
    "@types/ssh2": "^1.15.5",
    "nodemon": "^3.1.11",
    "pm2": "^5.3.0",
    "prisma": "^5.22.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
